{
  "name": "client",
  "private": true,
  "scripts": {
    "serve-desktop": "vue-cli-service serve src/desktop.js --mode desktop.development",
    "serve-mobile": "vue-cli-service serve src/mobile.js --mode mobile.development",
    "serve-sidebar": "vue-cli-service serve src/sidebar.js --mode desktop.development",
    "build-desktop": "vue-cli-service build src/desktop.js --dest dist/desktop --mode desktop.production --report && npm run build-sidebar && npm run copycss && npm run copyjs && npm run copyjs-sidebar",
    "build-mobile": "vue-cli-service build src/mobile.js --dest dist/mobile --mode mobile.production --report",
    "build-sidebar": "vue-cli-service build src/sidebar.js --dest dist/sidebar --mode desktop.production",
    "lint": "vue-cli-service lint",
    "copycss": "copyfiles dist/desktop/css/*.css ../css --flat",
    "copyjs": "copyfiles dist/desktop/js/*.js ../js --flat",
    "copyjs-sidebar": "copyfiles dist/sidebar/js/*.js ../js/sidebar --flat"
  },
  "dependencies": {
    "@amcharts/amcharts4": "^4.10.2",
    "@uppy/core": "^1.13.2",
    "@uppy/drag-drop": "^1.4.19",
    "@uppy/progress-bar": "^1.3.19",
    "@uppy/status-bar": "^1.7.6",
    "@uppy/xhr-upload": "^1.6.4",
    "axios": "^0.20.0",
    "core-js": "^3.6.5",
    "d3": "^6.3.0",
    "flatpickr": "^4.6.6",
    "moment": "^2.28.0",
    "numeral": "^2.0.6",
    "sticky-js": "^1.3.0",
    "vue": "^2.6.11",
    "vue-i18n": "^8.22.0",
    "vue-router": "^3.2.0",
    "vuedraggable": "^2.24.3",
    "vuejs-paginate": "^2.1.0",
    "vuelidate": "^0.7.5",
    "vuex": "^3.4.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-router": "~4.5.0",
    "@vue/cli-plugin-vuex": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/eslint-config-standard": "^5.1.2",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^6.2.2",
    "node-sass": "^4.12.0",
    "sass-loader": "^8.0.2",
    "vue-template-compiler": "^2.6.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/standard"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
